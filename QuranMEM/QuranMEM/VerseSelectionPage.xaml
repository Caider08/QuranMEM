<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuranMEM.VerseSelectionPage">
    <ContentPage.Content>
        
      

        <ListView x:Name="verseListView">
            <ListView.Header>
                <Label Text="Pick Your Chapters to Study"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <TableSection>
                        <TextCell Text="{Binding ChapterName}"
                                  Detail="{Binding ChapterNumber}"
                                  />
                    </TableSection>
                </DataTemplate>
                
                
            </ListView.ItemTemplate>

            <ListView.Footer>
                <Button x:Name="QuranCloudTest"
                            Clicked="QuranCloudTest_Clicked"    
                    Margin="0,15,0,0"
                    Text="Get Allah"
                    BackgroundColor="Aqua"
                    BorderColor="Aqua"
                    TextColor="White" />
            </ListView.Footer>
          
        </ListView>
                             
    </ContentPage.Content>
</ContentPage>