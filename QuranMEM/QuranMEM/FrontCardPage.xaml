<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuranMEM.FrontCardPage"
           >
    <ContentPage.Content>
        <StackLayout x:Name="FrontCardStackLayout" Margin="0,20,0,0"
                    >

            <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                <Label Text="{Binding ArabicVerse}"
                   HorizontalOptions="Center"
                   
                />
            </StackLayout>
           

            <StackLayout Orientation="Horizontal"  HorizontalOptions="Center">
                <StackLayout Orientation="Vertical"  HorizontalOptions="Center">
                    <Button 
                    x:Name="AccountScreen"
                    Text="Surah Selection"
                    Clicked="AccountScreen_Clicked" 
                    BackgroundColor="Aqua"
                    TextColor="White"
                    />
                </StackLayout>
                <StackLayout Orientation="Vertical"  HorizontalOptions="Center">
                    <Button 
                    x:Name="BackFlashCard"
                    Text="English Translation"
                    Clicked="BackFlashCard_Clicked" 
                    BackgroundColor="Aqua"
                    TextColor="White"
                    />
                </StackLayout>
            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>