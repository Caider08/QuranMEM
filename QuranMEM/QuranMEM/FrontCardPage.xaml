<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuranMEM.FrontCardPage">
    <ContentPage.Content>
        <StackLayout x:Name="FrontCardStackLayout" Margin="0,20,0,0">
            <Label Text="{Binding Email, Mode=TwoWay}"
               />

            <Label Text="{Binding CurrentCard, Mode=TwoWay}"
                   />

            <Label Text="{Binding ArabicVerse}"
                />

            <Button 
                    x:Name="NextFlashCard"
                    Text="Next Card"
                    Command="{Binding SignOutCommand}"
                    CommandParameter="{Binding User}"
                    BackgroundColor="Aqua"
                    TextColor="White"
                    />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>