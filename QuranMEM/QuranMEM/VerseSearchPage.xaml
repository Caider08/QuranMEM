<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuranMEM.VerseSearchPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry 
                x:Name="CloudSearchVerse"
                Placeholder="Verse Number"
                Keyboard="Numeric"
                TextColor="Aqua"
                />
            
            <Button x:Name="QuranCloudSearch"
                            Clicked="QuranCloudSearch_Clicked"    
                    Margin="0,15,0,0"
                    Text="Get Allah"
                    BackgroundColor="Aqua"
                    BorderColor="Aqua"
                    TextColor="White" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>