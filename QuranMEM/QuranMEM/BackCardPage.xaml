<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuranMEM.BackCardPage">
    <ContentPage.Content>
        <StackLayout x:Name="FrontCardStackLayout" Margin="0,20,0,0">
            <Label Text="{Binding ChapterName}"
               />

            <Label Text="{Binding ChapterNumba}"/>

            <Label Text="{Binding VerseNumba}"
                   />

            <Label Text="{Binding CurrentCard, Mode=TwoWay}"
                   />

            <Label Text="{Binding EnglishTranslation}"
                   HorizontalOptions="CenterAndExpand"
                />

            <Button 
                    x:Name="NextFlashCard"
                    Text="Next Card"
                    Clicked="NextFlashCard_Clicked" 
                    BackgroundColor="Aqua"
                    TextColor="White"
                    />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>